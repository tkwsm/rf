

  
<div class="container">
<% @galleries.each do |gallery| %>

  <div class="item">

  <table width="200" height="300">
    <tr align="center" height="6" >
      <td><img src="<%= gallery.image_link %>" width="120" height="60"</td>
    </tr>
    <tr height="2">
      <td>Project ID: <%= gallery.id %></td>
    </tr>
    <tr height="2">
      <td><i><%= gallery.species_name %></i></td>
    </tr>
    <tr height="2">
      <td><%= gallery.common_name %></td>
    </tr>
    <tr height="2">
      <td>Version: <%= gallery.version %></td>
    </tr>
    <tr height="2">
      <td><%= link_to "Link to Viewer", galleries_viewer_path(id: gallery.id, link: gallery.url_link) %></td>
    </tr>
    <tr>
      <td style="word-break: break-all;"><%= gallery.description %></td>
    </tr>
    <tr height="2">
      <td><a href="/galleries/<%= gallery.id %>">SHOW</a>
          <%= link_to "EDIT", edit_gallery_path(gallery) %>
          <%# = link_to "DESTROY", gallery, method: :delete,
                     data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </table>

  </div>
  
<% end %>

</div>

<%= link_to 'New Gallery', new_gallery_path %>

